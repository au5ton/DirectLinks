{
    "manifest_version": 2,

    "name": "DirectLinks",
    "version": "2.0",

    "description": "Makes indirect links on Google and Facebook direct.",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "content_scripts" : [{
        "matches": [
            "<all_urls>"
        ],
        "js" : ["injected.js"]
    }]
}
